# ============================================
# Harmony SaaS - Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=SaaS Multi-Tenant API
DEBUG=False

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/harmony_saas

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
# IMPORTANT: Generate a strong random secret key
# You can use: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Email Configuration
# Set to False to disable email sending (recommended for development)
MAIL_ENABLED=False
MAIL_FROM=noreply@harmony-saas.com
MAIL_FROM_NAME=Harmony SaaS

# SMTP Server Configuration
# For Gmail:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# For SendGrid:
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_STARTTLS=True
# MAIL_SSL_TLS=False

# For AWS SES:
# MAIL_SERVER=email-smtp.us-east-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USERNAME=your-ses-smtp-username
# MAIL_PASSWORD=your-ses-smtp-password
# MAIL_STARTTLS=True
# MAIL_SSL_TLS=False

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# --- Sentry Error Tracking (optional) ---
# Leave empty to disable. Get DSN from https://sentry.io
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=development

# Test Database (for pytest - separate DB to avoid touching dev data)
# Create with: createdb harmony_test
# TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/harmony_test

# ============================================
# Production Security Notes
# ============================================
# 1. Always use strong, randomly generated SECRET_KEY
# 2. Use environment-specific DATABASE_URL (don't share between dev/prod)
# 3. Enable HTTPS in production (update FRONTEND_URL to https://)
# 4. Restrict CORS_ORIGINS to your actual frontend domain
# 5. Use app-specific passwords or API keys for email
# 6. Never commit .env file to version control
# 7. Set DEBUG=False in production
