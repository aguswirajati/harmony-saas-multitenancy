# Harmony SaaS - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Harmony SaaS
DEBUG=False

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql+psycopg://user:password@host:port/database
DATABASE_URL=postgresql+psycopg://postgres:your_password@localhost:5432/saas_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection string for caching and rate limiting
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Secret key for JWT token signing (MUST be changed in production!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-this-in-production

# JWT algorithm (default: HS256)
ALGORITHM=HS256

# Token expiration times (in minutes/days)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DEVELOPER MODE
# =============================================================================
# Set to True to disable rate limiting and enable developer tools
DEV_MODE=False
# Set to False to explicitly disable rate limiting (independent of DEV_MODE)
RATE_LIMIT_ENABLED=True

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated for multiple origins)
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Enable/disable email sending (set to False for local development)
MAIL_ENABLED=True

# Email sender information
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Harmony SaaS

# SMTP server configuration
# For Gmail: smtp.gmail.com, port 587
# For SendGrid: smtp.sendgrid.net, port 587
# For AWS SES: email-smtp.us-east-1.amazonaws.com, port 587
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# TLS/SSL settings
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend URL for email links and CORS
# Development: http://localhost:3000
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# Stripe API keys for billing (optional)
# STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# =============================================================================
# NOTES FOR PRODUCTION DEPLOYMENT
# =============================================================================
# 1. NEVER commit .env file to version control
# 2. Always use strong, randomly generated SECRET_KEY
# 3. Set DEBUG=False in production
# 4. Use environment-specific CORS_ORIGINS
# 5. Configure proper SMTP credentials (consider SendGrid/AWS SES for production)
# 6. Set FRONTEND_URL to your actual domain
# 7. Enable HTTPS in production (use reverse proxy like Nginx)
# 8. Consider using environment variables or secrets management (AWS Secrets Manager, etc.)
